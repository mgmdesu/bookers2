<!--Editing Bookのページ-->
<h2><strong>Editing Book</strong></h2>

<%= form_with model: @book do |f| %>

  <div class="book-title">
    <label for="inputTitle">Title</label></br>
      <%= f.text_field :title, autofocus: true, id:"inputTitle" %>
  </div>
  <div class="book-body">
    <label for="inputBody">opinion</label></br>
      <%= f.text_area :body, autofocus: true, id:"inputBody" %>
  </div>
  <%= f.submit "Update book" %></br>
  <%= link_to 'Show', book_path(@book.id) %>
  <a>|</a>
  <%= link_to 'Back', books_path %>
<% end %>