<!--Editing Bookのページ-->
<h2><strong>Editing Book</strong></h2>

<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル" %>
  <label for="inputBody">opinion</label>
  <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"説明文" %>
  <%= f.submit "Update book" %>

  <%= link_to 'Show', book_path(@book.id) %>
  <a>"|"</a>
  <%= link_to 'Back', books_path %>
<% end %>