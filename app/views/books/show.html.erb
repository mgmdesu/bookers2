<!--Books detailのページ-->
<h2><strong>Book detail</strong></h2>

<tabel>
  <tr>
    <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
    <%= @book.user.name %>
    <td><%= link_to @book.title, book_path(@book.id) %></td>
    <td><%= @book.body %></td>
    <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
    <% if @book.user == current_user %>
      <td><%= link_to 'Destroy', book_path(@book), method: :delete %></td>
    <% end %>
  </tr>
</tabel>

<%= render 'users/user_info', books: @books %>


