<!--Books User_infoのページ-->
<%= render 'user_info', book: @book, user: @user %>

<!-- Booksの一覧ページ -->
<h2><strong>Books</strong></h2>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  
  <% @books.each do |book| %>
  <tr>
    <td>
      <%= link_to user_path(book.user.id) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
      <% end %>
    </td>
    <td>
      <%= link_to book.title, book_path(book.id) %>
    </td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>


